.group_name_input {
	position: absolute;
	z-index: 5;
    top: 8%;
	left: 55%;
	visibility: hidden;
	background-color: #3b5998;
	padding: 5px;
	width: 167px;
}

.group_name_input input {
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}

.group_name_input i {
	color: white;
}

.interface {
	position: relative;
	margin: 0px;
}

.interface canvas {
	z-index: -1;
	position: fixed;
	top: 8%;
}

.imageMenu {
	position: fixed;
	margin: 0px;
	overflow-y: hidden;
	top: 9%;
	left: 0%;
	z-index: 4;
}

.imageMenu:hover{
    overflow-y: auto;
}

.imageMenu::-webkit-scrollbar {
    width: 6px;
    height: 5px;
    background: rgba(0,0,0,0);
}

.imageMenu::-webkit-scrollbar-thumb
{
  border-radius: 10px;
  background: #3b5998;
}

.imageMenu #context_link {
	position: absolute;
	z-index: 3;
	color: white;
	font-weight: bold;
	margin: 5px;
	-webkit-user-select: none; /* Chrome/Safari */        
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
}

.imageMenu #context_link a {
	color: white;
	text-decoration: none;
    margin: 5px;
}

.imageMenu canvas {
	z-index: 4;
	position: absolute;
	top: 5%;
	left: 0%;
}

.imageMenu #imageMenuCanvasBackground {
	opacity: 0.8;
	background-color: #8b9dc3;
	z-index: 2;
	position: fixed;
	top: 9%;
    border: 2px solid #3b5998;
}

.imageMenu #btn_imageMenu_hide {
    position: fixed;
    z-index: 2;
	top: 9%;
    left: 28%;
    color: white;
}

.imageMenu #btn_imageMenu_hide:hover {
	color: red;
}

.show_imageMenu {
	position: fixed;
	top: 9%;
	left: 0.1%;
	width: 19px;
	height: 19px;
	margin: 0px;
	opacity: 0.8;
	background-color: #3b5998;
	z-index: 5;
	visibility: hidden;
}

.show_imageMenu i {
	padding: 2px;
	color: white;
}

.show_imageMenu i:hover {
	color: red;
}

